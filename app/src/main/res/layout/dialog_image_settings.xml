<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorText">

    <TextView
        android:id="@+id/tv_photo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_16dp"
        android:text="Profile photo"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/dialog_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_photo"
        android:drawablePadding="@dimen/_4dp"
        android:drawableTop="@drawable/ic_gallery"
        android:padding="@dimen/_16dp"
        android:text="Gallery" />

    <TextView
        android:id="@+id/dialog_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_photo"
        android:layout_toEndOf="@+id/dialog_gallery"
        android:drawablePadding="@dimen/_4dp"
        android:drawableTop="@drawable/ic_camera"
        android:padding="@dimen/_16dp"
        android:text="Camera" />

    <TextView
        android:id="@+id/dialog_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_photo"
        android:layout_toEndOf="@+id/dialog_camera"
        android:drawablePadding="@dimen/_4dp"
        android:drawableTop="@drawable/ic_delete"
        android:padding="@dimen/_16dp"
        android:text="Remove photo" />

</RelativeLayout>